<% provide(:title, "Boards")%>
<% if flash[:notice] %>
  <div class="alert alert-danger"><%= flash[:notice] %></div>
<% end %>
<div class="row items" >
<% @boards.each do |board| %>
  <div class="card mb-4 shadow-sm item">
    <%= image_tag board.image_url.to_s %>
    <div class="card-body">
    <p class="card-text"><%= board.name %></p>
     <p class="card-text"><%= board.body %></p>
     <p class="card-text"><%= board.created_at.to_s(:datetime_jp) %></p>
      <div class="btn-group">
      <%= link_to "見る",board,class: "btn btn-sm btn-outline-secondary"%>
      <%= link_to "削除",board,class: "btn btn-sm btn-outline-secondary",method: :delete %>
      <%= link_to "編集",edit_board_path(board),class: "btn btn-sm btn-outline-secondary"%>   
      </div>
    </div>
  </div>
<% end %>
</div>
