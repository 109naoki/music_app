<% provide(:title, "一覧")%>

<div class="d-flex align-items-center mt-4 mb-4">
  <div class="ml-auto boards__linkBox">
    <%= link_to "一覧",boards_path,class: "btn btn-outline-dark"%> 
    <a href="/boards" class="btn btn-outline-dark">編集</a>
  </div>
</div>

<div class="row items" >

  <div class="card mb-4 shadow-sm item">
    <%= image_tag @board.image_url.to_s %>
    <div class="card-body">
    <p class="card-text"><%= @board.name %></p>
     <p class="card-text"><%= @board.body %></p>
     <p class="card-text"><%= @board.created_at.to_s(:datetime_jp) %></p>
      <div class="btn-group">
        <button type="button" class="btn btn-sm btn-outline-secondary">見る</button>
        <button type="button" class="btn btn-sm btn-outline-secondary">編集</button>
      </div>
      <small class="text-muted">9分</small>
    </div>
  </div>

</div>
