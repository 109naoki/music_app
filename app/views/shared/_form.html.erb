
<%= form_with model: @board do |f| %>
 
  <div class="form-group">
    <%= f.label :name, '名前' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= f.label :body, '本文' %>
    <%= f.text_area :body, class: 'form-control', rows: 10 %>
  </div>
  <div class="form-group">
    <%= f.label :image, '画像' %>
    <%= f.file_field :image ,class: 'form-control'%>
  </div>
  <%= f.submit '保存', class: 'btn btn-primary' %>
<% end %>